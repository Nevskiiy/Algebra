@model Kupac

<div class="customer" id="@ViewBag.index">
    <table class="table table-striped table-sm">
        <tr>
            <td>Name</td>
            <td>@Model.Ime</td>
        </tr>
        <tr>
            <td>Lastname</td>
            <td>@Model.Prezime</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>
                <a href="mailto:@Model.Email">@Model.Email</a>
            </td>
        </tr>
        <tr>
            <td>Telephone</td>
            <td>@Model.Telefon</td>
        </tr>
        <tr>
            <td>Town</td>
            <td>
                @Html.Action(
               controllerName:"Customer", 
               actionName:"GetGrad",
               routeValues: new {id=Model.GradID})
            </td>
        </tr>
        <tr>
            <td>
                <a href="@Url.Action(
                        controllerName:"Customer", 
                        actionName:"Edit", 
                        routeValues:new { id=Model.IDKupac})">
                    <table>
                        <tr>
                            <td>
                                <span style="font-size:1em; margin-right:0.2em;">
                                    <i class="fas fa-edit"></i>
                                </span>
                            </td>
                            <td>Edit customer</td>
                        </tr>
                    </table>
                </a>
            </td>
        </tr>
    </table>
</div>
